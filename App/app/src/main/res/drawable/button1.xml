<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/onPressedColor"/> <!-- Color when pressed -->
            <corners android:radius="0dp"/> <!-- Preserve the corners parameter -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Color when focused -->
            <corners android:radius="0dp"/> <!-- Preserve the corners parameter -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/actionColor"/> <!-- Default color -->
            <corners android:radius="0dp"/> <!-- Preserve the corners parameter -->
        </shape>
    </item>
</selector>
