<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actions.ActionsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">
        <ImageButton
            android:id="@+id/returnButton"
            android:background = "@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/corgi"
            android:scaleType="fitXY"
            android:adjustViewBounds="true">
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:layout_marginBottom="10dp"
            android:background="@drawable/button1"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:id="@+id/sendButton"
            android:text="Отправить на сервер"
            android:textColor="@color/black"
            android:textSize="16dp">
        </Button>
        <Button
            android:layout_marginBottom="10dp"
            android:background="@drawable/button1"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:id="@+id/backUpButton"
            android:text="Восстановить с сервера"
            android:textColor="@color/black"
            android:textSize="16dp">
        </Button>
        <EditText
            android:id="@+id/nDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Скопировать данные за последние N дней">
        </EditText>
        <Button
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:background="@drawable/button1"
            android:id="@+id/copyButton"
            android:text="Скопировать данные"
            android:textColor="@color/black"
            android:textSize="16dp">
        </Button>
    </LinearLayout>
</LinearLayout>